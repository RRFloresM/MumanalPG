@model MumanalPG.Models.Ventas.VentaRequisito

@{
    ViewData["Title"] = "Prestaciones / ASR / Contratación / Requisitos / CargaArchivo";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CargaArchivo" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="IdVentaRequisito" />
            <input type="hidden" asp-for="IdVentaContratacion" />
            <input type="hidden" asp-for="IdDocumentoRespaldo" />
            <div class="form-group">
                <table>
                    <tr>
                        <td> <label asp-for="IdDocumentoFormato" class="control-label"></label> </td>
                        <td>
                            <input asp-for="IdDocumentoFormato" class="form-control" />
                            <span asp-validation-for="IdDocumentoFormato" class="text-danger"></span>
                        </td>
                    </tr>
                </table>
            </div>

            @*            <input type="file" name="ArchivoPDF" required accept="application/pdf" />*@
            <input type="file" name="ArchivoPDF" title="Escanear Archivo" />
            <br>
            <br>
            <div class="form-group">
                <input type="submit" asp-route-id="@ViewBag.id" value="Grabar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regreso a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
