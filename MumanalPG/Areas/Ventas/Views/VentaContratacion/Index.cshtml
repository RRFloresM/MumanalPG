@model IEnumerable<MumanalPG.Models.Ventas.vContratacion>

@{
    ViewData["Title"] = "Prestaciones / ASR / Registro";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Lista de Registros ASR</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp; Nuevo Registro</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Numero ASR
            </th>
            <th>
                Num. Solicitud
            </th>
            <th>
                Regional o Agencia
            </th>
            <th>
                Fecha Registro
            </th>
            <th>
                Solicitante
            </th>
            <th>
                Garante
            </th>
            <th>
                Gestión
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdAsrSiver)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CorrelativoUnidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnidadEjecutora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beneficiario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Garante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gestion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdVentaContratacion">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdVentaContratacion">Detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.IdVentaContratacion">Eliminar</a> |
                <a asp-action="Requisitos" asp-route-id="@item.IdVentaContratacion">Requisitos</a>
            </td>
        </tr>
        }
    </tbody>
</table>
