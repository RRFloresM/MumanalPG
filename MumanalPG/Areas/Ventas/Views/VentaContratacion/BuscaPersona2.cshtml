@model IEnumerable<MumanalPG.Models.RRHH.vPersona>
    @{
    ViewData["Title"] = "Busca Garante";
    }

    <form asp-action="BuscaPersona2" method="get">
        <div class="form-actions no-color">
            <p>
                Buscar por Carnet o primeras letras del Apellido: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Buscar" class="btn btn-facebook" />

            </p>
        </div>

    </form>

    @ViewBag.IdBeneficiario
    @ViewBag.Beneficiario
    @ViewBag.IdBeneficiarioGarante
    @ViewBag.Garante

    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    CI
                </th>
                <th>
                    Nombres
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
    {
            <tr>
                <td>
                    @*<a asp-action="Create" asp-route-id="@Html.DisplayFor(modelItem => item.IdBeneficiario)+@Html.DisplayFor(modelItem => item.IdBeneficiario)" >@Html.DisplayFor(modelItem => item.IdBeneficiario)</a>*@

                    @Html.DisplayFor(modelItem => item.IdBeneficiario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentoIdentidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Denominacion)
                </td>
                <td>
                    @Html.ActionLink("Elegir", "Create", new { IdBeneficiario = "0", IdBeneficiarioGarante = item.IdBeneficiario, Beneficiario = "", Garante = item.Denominacion})
                </td>
            </tr>
    }
        </tbody>
    </table>

