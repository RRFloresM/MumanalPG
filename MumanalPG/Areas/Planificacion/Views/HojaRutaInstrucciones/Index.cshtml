@model IEnumerable<MumanalPG.Models.Planificacion.HojaRutaInstrucciones>

@{
    ViewData["Title"] = "HojaRuta Instruciones";
}

<h2>Lista</h2>

<p>
    <a asp-action="Create">Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdHojaRutaDetalle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdInstruccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEstadoRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraRegistro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdHojaRutaDetalle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdInstruccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEstadoRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraRegistro)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdHojaRutaInstruccion">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdHojaRutaInstruccion">Detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.IdHojaRutaInstruccion">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
