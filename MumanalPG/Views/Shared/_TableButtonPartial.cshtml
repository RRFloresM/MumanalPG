@model object
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<td style="width:150px">
    <div class="btn-group" role="group">
        <a class="btn btn-secondary" data-toggle="tooltip" title="Editar" asp-action="Edit" asp-route-id="@Model">
            <i class="far fa-edit"></i>
        </a>
        <a type="button" class="btn btn-secondary" data-toggle="tooltip" title="Detalle" asp-action="Details" asp-route-id="@Model">
            <i class="far fa-list-alt"></i>
        </a>
        <a type="button" class="btn btn-secondary" data-toggle="tooltip" title="Eliminar" asp-action="Delete" asp-route-id="@Model">
            <i class="far fa-trash-alt"></i>
        </a>
    </div>
</td>
